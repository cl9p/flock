	<%= javascript_include_tag "jquery.localScroll" %>
	<%= javascript_include_tag "greensock/TweenMax.min" %>
	<%= javascript_include_tag "jquery.lettering-0.6.1.min" %>
	<%= javascript_include_tag "jquery.superscrollorama" %>
    <script type="text/javascript">
        $(function(){
            $('#content .section ul li a').bind('click', function(e) {
                e.preventDefault();
                console.log("back to top");
                $('body').scrollTo(0, 1000);
            });

            $('#topbar ul li a').bind('click', function(e) {
                e.preventDefault();
                target = this.hash;
                console.log(target);
                $.scrollTo(target, 1000);
            });

        });

        var controller = $.superscrollorama({
            triggerAtCenter: true,
            playoutAnimations: true
        });

        function resizeDiv() {
            vpw = $(window).width();
            vph = $(window).height();
            $('.section').css({'height': vph + 'px'});
        }

        window.onresize = function(event) {
            resizeDiv();
            controller.triggerCheckAnim();
        }

        jQuery(document).ready(function() {
            resizeDiv();
            vph = $(window).height();
            controller.addTween('#lego-blue-4', TweenMax.to($('#lego-blue-4'), 2, {left:'632px', top:'100px'}));
            controller.addTween('#animate', TweenMax.fromTo($('#animate'), 1.5 , {css:{opacity:0,'letter-spacing':'30px'}, immediateRender:true, ease:Quad.easeInOut}, {css:{opacity:1, 'letter-spacing':'0px'}, ease:Quad.easeInOut}), 0, 100);
        });
    </script>
</body>
