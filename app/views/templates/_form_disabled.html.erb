<%= simple_form_for @template, html: {class: 'form-horizontal', role: 'form'} do |f| %>
	<div class="form-group">
		<%= f.label :name, 'name', class: 'col-lg-3 control-label' %>
		<div class='col-lg-5'>
			<%= f.input_field :name, class: 'form-control input-sm', :disabled => true %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :image_location, 'image location', :class => "col-lg-3 control-label" %>
		<div class="col-lg-5">
			<%= f.input_field :image_location, :class => "form-control input-sm", :disabled => true %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :vendor, 'vendor', :class => "col-lg-3 control-label" %>
		<div class="col-lg-5">
			<%= f.collection_select(:provider_id, Provider.all, :_id, :view_name, {prompt: 'Select Vendor'}, {:disabled => 'disabled'}) %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :configurations, 'configurations', :class => "col-lg-3 control-label" %>
		<div class="col-lg-5">
			<%= f.collection_check_boxes :configuration_ids, Configuration.all, :_id, :name, {:item_wrapper_class => 'checkbox cl9p-checkbox'}, {:"data-toggle" => 'checkbox', :disabled => 'disabled'} %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :os_name, 'os name', :class => "col-lg-3 control-label" %>
		<div class="col-lg-5">
			<%= f.input_field :os_name, :class => "form-control input-sm", :disabled => true %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :os_version, 'os version', :class => "col-lg-3 control-label" %>
		<div class="col-lg-5">
			<%= f.input_field :os_version, :class => "form-control input-sm", :disabled => true %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :container_support, 'container support', :class => "col-lg-3 control-label" %>
		<div class="col-lg-5">
			<div class="switch switch-square"
			  data-on-label="<i class='fui-check'></i>"
			  data-off-label="<i class='fui-cross'></i>">
			  <%= f.check_box :container_support, {disabled: true} %>
			</div>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :version, 'version', :class => "col-lg-3 control-label" %>
		<div class="col-lg-5">
			<%= f.input_field :version, :class => "form-control input-sm", :disabled => true %>
		</div>
	</div>
<% end %>

