			<%= f.text_field :version, :class => "form-control input-sm" %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-lg-offset-3 col-lg-5">
	    <%= f.submit "submit", :class => "btn btn-sm btn-primary" %>
		</div>
	</div>
<% end %>

