			<%= f.text_field :image_location, :class => "form-control input-sm" %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :provider, 'provider', :class => "col-lg-3 control-label" %>
		<div class="col-lg-5">
			<%= f.text_field :provider, :class => "form-control input-sm" %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :os_name, 'os', :class => "col-lg-3 control-label" %>
		<div class="col-lg-5">
			<%= f.text_field :os_name, :class => "form-control input-sm" %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :os_version, 'os version', :class => "col-lg-3 control-label" %>
